<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.six.achrist.client">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <service android:name="com.six.achrist.client.ConnectionService"/>

        <activity
            android:name="com.six.achrist.client.StartUpActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.six.achrist.client.MainActivity"></activity>

        <service android:name="com.six.achrist.client.ConnectionService"></service>
        <receiver android:name=".ConnectionService$MyBroadcastReceiver"></receiver>


    </application>

</manifest>